<form method="get" action="/quizes">
	<input type="text" name="search" value=""/>
	<td>
	<input type="submit" value="Enviar"/>
</form>

<table>
	<% var i; for(i=0; i< quizes.length; i++) { %>
		<tr>
			<td><a href="quizes/<%=quizes[i].id%>"><%= quizes[i].pregunta %> (<%= quizes[i].tema%>)</a></td>
			<%if(session.user){%>
				<td><a href="quizes/<%=quizes[i].id%>/edit"><button>Editar</button></a></td>
				<td>
					<form method="POST" action="/quizes/<%=quizes[i].id%>?_method=DELETE" style="display:inline">
                    	<button type="submit" onclick="return confirm('Borrar: <%=quizes[i].pregunta%>');">Borrar</button>
            		</form>
				</td>
				<%}%>
			</tr>

		<%}%>
</table>
<%if (session.user){%>
	<a href="/quizes/new"> <button type="button">Crear pregunta</button></a>
<%}%>